<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Register</title>
  <link rel="stylesheet" href="/css/main.css">
  <style>
    /* Styles for the container */
    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background-color: #f3e8ff; /* Light purple background */
    }

    /* Styles for the card */
    .card {
      max-width: 400px;
      padding: 30px;
      border-radius: 10px;
      box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.1); /* Soft shadow */
      background-color: #fff; /* White background */
    }

    /* Styles for the card title */
    .card h2 {
      font-size: 2rem;
      font-weight: bold;
      color: #6a0dad; /* Light purple color */
      text-align: center;
      margin-bottom: 20px;
    }

    /* Styles for form controls */
    .form-control {
      margin-bottom: 20px;
    }

    /* Styles for labels */
    .label-text {
      font-size: 1rem;
      font-weight: bold;
      color: #6a0dad; /* Light purple color */
    }

    /* Styles for input fields */
    .input {
      width: 100%;
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 5px;
      font-size: 1rem;
      color: #6a0dad; /* Light purple color */
      background-color: #f9f5ff; /* Lighter purple background */
    }

    /* Styles for the submit button */
    .btn {
      width: 100%;
      padding: 12px;
      border: none;
      border-radius: 5px;
      background-color: #6a0dad; /* Light purple color */
      color: #fff; /* White color */
      font-size: 1rem;
      font-weight: bold;
      cursor: pointer;
      transition: background-color 0.3s ease; /* Smooth transition */
    }

    /* Styles for the submit button on hover */
    .btn:hover {
      background-color: #542b87; /* Darker purple color on hover */
    }

    /* Styles for alerts */
    .alert {
      padding: 15px;
      background-color: #f8d7da; /* Light red color */
      color: #721c24; /* Dark red color */
      border-radius: 5px;
      margin-bottom: 20px;
      text-align: center;
    }

    /* Styles for success message */
    .success-message {
      color: #155724; /* Green color */
      font-weight: bold;
      text-align: center;
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <% include('partials/navbar', { page: 'register' }) %>
  
  <div class="container">
    <div class="card">
      <h2>Register</h2>
      <% if(typeof errorMessage !== 'undefined') { %>
        <div class="alert">
          <span><%= errorMessage %></span>
        </div>
      <% } %>
      <div class="form-control">
        <label class="label">
          <span class="label-text">User Name</span>
        </label>
        <input type="text" name="userName" placeholder="User Name" required class="input">
      </div>
      <div class="form-control">
        <label class="label">
          <span class="label-text">Password</span>
        </label>
        <input type="password" name="password" placeholder="Password" required class="input">
      </div>
      <div class="form-control">
        <label class="label">
          <span class="label-text">Confirm Password</span>
        </label>
        <input type="password" name="password2" placeholder="Confirm Password" required class="input">
      </div>
      <div class="form-control">
        <label class="label">
          <span class="label-text">Email Address</span>
        </label>
        <input type="email" name="email" placeholder="Email Address" required class="input">
      </div>
      <button type="submit" class="btn">Register</button>
    </div>
  </div>
</body>
</html>
